{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es6", "dom"],
    "mapRoot": "../dist/server",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist/",
    "compilerOptions": {
         "types" : [ "node_modules/@types" ]
    }
  },
  "exclude": [
    "node_modules/*"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  }
}